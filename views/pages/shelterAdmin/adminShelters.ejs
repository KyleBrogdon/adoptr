<!DOCTYPE html>
<html>
  <head>
    <%- include('../../partials/head'); %>
    <title>Adoptr</title>
  </head>
  <body>

    <%- include('../../partials/header_shelterAdmin'); %>
    <data hidden id="hidden-userID"></data>
    <div class="container">
      <div>
        <h6 class="display-6" style ="text-decoration: underline; padding-top: 2%;">Shelters</h6>
        <table class="table table-striped">
          <thead>
            <tr>
              <th scope="col">Shelter #</th>
              <th scope="col">Shelter Name</th>
              <th scope="col">Shelter Code</th>
              <th scope="col">Location</th>
              <th scope="col">Actions</th>
              <th scope="col">Delete</th>    
            </tr>
          </thead>
          <tbody id="main-rows">
          </tbody>
        </table>
      </div>
      <br>
      <div class="row">
        <div class="col">
          <button class="btn btn-primary" id="newShelter">Add New Shelter</button>
        </div>
        <div class="col">
          <button class="btn btn-primary" id="existingShelter">Add Existing Shelter</button>
        </div>
      </div>

      <div class="mt-3"></div>
      <p>
        <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#update-modal" aria-expanded="false" aria-controls="collapseExample">
          UPDATE shelter entry
        </button>
      </p>
      <div class="collapse" id="update-modal">
        <div class="card card-body" id="insert-card">

          <div class="input-group input-group-sm mb-3">
            <span class="input-group-text" id="inputGroup-sizing-sm">shelterID (PK)</span>
            <select class="form-select " id="update-shelter-pk-menu"> 
              <option selected> number </option>
            </select>
          </div>

          <div class="input-group input-group-sm mb-3">
            <span class="input-group-text" id="inputGroup-sizing-sm">shelterName</span>
            <input type="text" id="update-shelter-name" class="form-control" aria-label="shelterName" aria-describedby="inputGroup-sizing-sm">
          </div>
          <div class="input-group input-group-sm mb-3">
            <span class="input-group-text" id="inputGroup-sizing-sm">shelterCode</span>
            <input type="text" id="update-shelter-code" class="form-control" aria-label="shelterCode" aria-describedby="inputGroup-sizing-sm">
          </div>
          <div class="input-group input-group-sm mb-3">
            <span class="input-group-text" id="inputGroup-sizing-sm">email</span>
            <input type="text" id="update-email" class="form-control" aria-label="email" aria-describedby="inputGroup-sizing-sm" placeholder="Enter Unique Email">
          </div>
          <div class="input-group input-group-sm mb-3">
            <span class="input-group-text" id="inputGroup-sizing-sm">password</span>
            <input type="text" id="update-password" class="form-control" aria-label="password" aria-describedby="inputGroup-sizing-sm" >
          </div>
          <div class="input-group input-group-sm mb-3">
            <span class="input-group-text" id="inputGroup-sizing-sm">zipcode</span>
            <input type="text" id="update-zipcode" class="form-control" aria-label="zipcode" aria-describedby="inputGroup-sizing-sm" >
          </div>
          <div class="input-group input-group-sm mb-3">
            <span class="input-group-text" id="inputGroup-sizing-sm">city</span>
            <input type="text" id="update-city" class="form-control" aria-label="city" aria-describedby="inputGroup-sizing-sm" >
          </div>
          <div class="input-group input-group-sm mb-3">
            <span class="input-group-text" id="inputGroup-sizing-sm">state</span>
            <input type="text" id="update-state" class="form-control" aria-label="state" aria-describedby="inputGroup-sizing-sm" >
          </div>
          <div class="my-3 mx-4 border-top"></div>
          <div class="container-sm">
            <button type="button" class="btn btn-success" id="updateShelterButton">UPDATE shelter entry</button>
          </div>
        </div>
      </div>
  
      <div class="mt-3"></div>
  
    </div>  

    <div class="progress" id="loadingbar">
      <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%"></div>
    </div>


    <!-- Modal for viewing shelter info -->
    <div class="modal fade" id="shelterModal" tabindex="-1" aria-labelledby="shelterModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="modalTitle">Shelter Details</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <h6 class="display-6" style ="text-decoration: underline; padding-top: 2%;"></h6>
              <table class="table table-striped">
                <tbody id="modal-table">
  
                </tbody>
  
              </table>
            </div>
          </div>
        </div>
      </div> 

    <!-- Modal for updating a shelter admin -->
    <div class="modal fade" id="updateShelterModal" tabindex="-1" aria-labelledby="ShelterModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="updateShelterModalTitle">Shelter Details</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <div class="card card-body" id="insert-card">
                <div class="input-group input-group-sm mb-3">
                    <span class="input-group-text" id="inputGroup-sizing-sm">shelterName</span>
                    <input type="text" id="update-shelter-name" class="form-control" aria-label="shelterName" aria-describedby="inputGroup-sizing-sm">
                </div>
                <div class="input-group input-group-sm mb-3">
                    <span class="input-group-text" id="inputGroup-sizing-sm">shelterCode</span>
                    <input type="text" id="update-shelter-code" class="form-control" aria-label="shelterCode" aria-describedby="inputGroup-sizing-sm">
                </div>
                <div class="input-group input-group-sm mb-3">
                    <span class="input-group-text" id="inputGroup-sizing-sm">email</span>
                    <input type="text" id="update-email" class="form-control" aria-label="email" aria-describedby="inputGroup-sizing-sm" placeholder="Enter Unique Email">
                </div>
                <div class="input-group input-group-sm mb-3">
                    <span class="input-group-text" id="inputGroup-sizing-sm">password</span>
                    <input type="text" id="update-password" class="form-control" aria-label="password" aria-describedby="inputGroup-sizing-sm" >
                </div>
                <div class="input-group input-group-sm mb-3">
                  <span class="input-group-text" id="inputGroup-sizing-sm">phone</span>
                  <input type="text" id="update-phone" class="form-control" aria-label="phone" aria-describedby="inputGroup-sizing-sm" >
                </div>
                <div class="input-group input-group-sm mb-3">
                    <span class="input-group-text" id="inputGroup-sizing-sm">zipcode</span>
                    <input type="text" id="update-zipcode" class="form-control" aria-label="zipcode" aria-describedby="inputGroup-sizing-sm" >
                </div>
                <div class="input-group input-group-sm mb-3">
                    <span class="input-group-text" id="inputGroup-sizing-sm">city</span>
                    <input type="text" id="update-city" class="form-control" aria-label="city" aria-describedby="inputGroup-sizing-sm" >
                </div>
                <div class="input-group input-group-sm mb-3">
                    <span class="input-group-text" id="inputGroup-sizing-sm">state</span>
                    <input type="text" id="update-state" class="form-control" aria-label="state" aria-describedby="inputGroup-sizing-sm" >
                </div>
                <div class="my-3 mx-4 border-top"></div>
                <div class="container-sm">
                    <button type="button" class="btn btn-success" id="updateShelterButton">UPDATE shelter entry</button>
                </div>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>

    <%- include('../../partials/footer'); %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" 
            integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" 
            crossorigin="anonymous">
    </script>
    <script src="../../scripts/shelterAdmin/shelterList.js"></script>
  </body>
</html>
