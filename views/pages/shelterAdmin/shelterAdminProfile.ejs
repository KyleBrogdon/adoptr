<!DOCTYPE html>
<html>
  <head>
    <%- include('../../partials/head'); %>
    <title>Adoptr</title>
  </head>
  <%- include('../../partials/header_shelterAdmin'); %>
  <body>
    <div class="mx-3" id="pageContent">
      <div class="container overflow-hidden">
        <div  id="profileFields" class="col" style="padding-right: 10%;">
          <data hidden id="hidden-userID"></data>
        </div>
      </div>
      <br><br>
      <div class="row">
        <div class ="col" id="profileUpdateField">
          <h6 class="display-6" style ="text-decoration: underline;">Admin Profile</h6>
          <div class="mb-3">
            <label for="InputFirstName" class="form-label">First Name</label>
            <input type="text" class="form-control" id="InputFirstName" value="Undefined">
          </div>
          <div class="mb-3">
            <label for="InputLastName" class="form-label">Last Name</label>
            <input type="text" class="form-control" id="InputLastName" value="Undefined">
          </div>
          <div class="mb-3">
            <label for="InputEmail" class="form-label">Email</label>
            <input type="text" class="form-control" id="InputEmail" value="Undefined">
          </div>
          <button class="btn btn-primary" id="updateProfileButton" type="submit">Update</button>
        </div>
  
        <div class="col">
          <div id="passwordUpdateField" class="col" style="padding-left: 10%;">
              <h6 class="display-6" style ="text-decoration: underline;">Password</h6>
              <div class="mb-3">
                  <label for="currentPassword" class="form-label">Current Password</label>
                  <input type="password" class="form-control" id="currentPassword">
              </div>
              <div class="mb-3">
                  <label for="newPassword" class="form-label">New Password</label>
                  <input type="password" class="form-control" id="newPassword">
              </div>
              <div class="mb-3">
                  <label for="confirmPassword" class="form-label">Confirm Password</label>
                  <input type="password" class="form-control" id="confirmPassword">
              </div>
              <button class="btn btn-primary" id="updatePassword">Update</button>
              <br><br>
          </div>
        </div>
  
        <div>
          <h6 class="display-6" style ="text-decoration: underline; padding-top: 2%;">Shelter List</h6>
          <table class="table table-striped">
            <thead>
              <tr>
                <th scope="col">Shelter #</th>
                <th scope="col">Shelter Name</th>
                <th scope="col">Shelter Code</th>
                <th scope="col">Location</th>
                <th scope="col">Expand</th>
                <th scope="col">Remove</th>    
              </tr>
            </thead>
            <tbody id="main-rows">
            </tbody>
          </table>
        </div>
        <br>
        <div class="row">
          <div class="col">
            <button class="btn btn-primary" id="newShelter">Add New Shelter</button>
          </div>
          <div class="col">
            <button class="btn btn-primary" id="existingShelter">Add Existing Shelter</button>
          </div>
        </div>

      </div>
      <div class="progress" id="loadingbar">
        <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%"></div>
      </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="shelterModal" tabindex="-1" aria-labelledby="shelterModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="modalTitle">Shelter Details</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <h6 class="display-6" style ="text-decoration: underline; padding-top: 2%;"></h6>
            <table class="table table-striped">
              <tbody id="modal-table">

              </tbody>

            </table>
          </div>
        </div>
      </div>
    </div>

    
    <%- include('../../partials/footer'); %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" 
            integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" 
            crossorigin="anonymous">
    </script>
    <script src="../../scripts/shelterAdmin/adminProfile.js"></script>

  </body>
</html>





