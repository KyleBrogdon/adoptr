<!DOCTYPE html>
<html>
  <head>
    <%- include('../../partials/head'); %>
    <title>Adoptr</title>
  </head>
  <body>

    <%- include('../../partials/header_shelterAdmin'); %>
    <div class="container overflow-hidden">
        <div class="row">
            <div  id="profileFields" class="col" style="padding-right: 10%;">
                <h6 class="display-6" style ="text-decoration: underline;">Pet Profile</h6>
                <data hidden id="hidden-shelterid"></data>
                <data hidden id="hidden-petid"></data>
                <div id="profileUpdateField"></div>
            </div>
        </div>
        <br><br>
        <img id="petIMG">
        <br><br>
        <h8 class="display-6" style ="text-decoration: underline; padding-top: 2%;">Properties</h8>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col-2">Atribute</th>
                    <th scope="col">value</th>       
                </tr>
            </thead>
            <tbody id="main-rows">
                <tr>
                    <th scope="col">name</th>
                    <th scope="col">
                        <input  class="form-control" id="petName">
                    </th>
                </tr>
                <tr>
                    <th scope="col">age</th>
                    <th scope="col">
                        <input  class="form-control" id="petAge">
                    </th>   
                </tr>
                <tr>
                    <th scope="col">sex</th>
                    <th scope="col">
                        <select class="form-select " id="atribute-form-sex"> 
                            <option selected id="defaultSex"></option>
                            <option selected id="secondSex"></option>
                        </select>
                    </th>   
                </tr>
                <tr>
                    <th scope="col">type</th>
                    <th scope="col">
                        <select class="form-select " id="atribute-form-type"> 
                            <option selected id="defaultType"></option>
                        </select>
                    </th>     
                </tr>
                <tr>
                    <th scope="col">Breed</th>
                    <th scope="col">
                        <select class="form-select " id="atribute-form-breed"> 
                            <option selected id="defaultBreed"></option>
                        </select>
                    </th>   
                </tr>
                <tr>
                    <th scope="col">availability</th>
                    <th scope="col">
                        <select class="form-select " id="atribute-form-availability"> 
                            <option selected id="defaultAv"></option>
                        </select>
                    </th>   
                </tr>
                <tr>
                    <th scope="col">size</th>
                    <th scope="col">
                        <select class="form-select " id="atribute-form-size"> 
                            <option selected id="defaultSize"></option>
                        </select>
                    </th>   
                </tr>
                <tr>
                    <th scope="col">spayed/neutered</th>
                    <th scope="col">
                        <select class="form-select " id="atribute-form-spayedOrNeutered"> 
                            <option selected id="defaultSN"></option>
                            <option  id="secondSN"></option>
                        </select>
                    </th>   
                </tr>
                <tr>
                    <th scope="col">Shots Current</th>
                    <th scope="col">
                        <select class="form-select " id="atribute-form-shots"> 
                            <option selected id="defaultST"></option>
                            <option  id="secondST"></option>
                        </select>
                    </th>    
                </tr>
            </tbody>
        </table>
        <div class="row" id="propertiesUpdateField">
            <div class = "col">
                <button class="btn btn-primary" id="updateProperties">Update</button>
            </div>          
        </div>
        <br></br><br>

        <h8 class="display-6" style ="text-decoration: underline; padding-top: 2%;">Blurb</h8>
        <div class="mb-3">
            <textarea class="form-control" id="petBlurb" rows="4" maxlength="500">
                
            </textarea>
            <br>
            <div class="row" id="blurbUpdateField">
                <div class = "col">
                    <button class="btn btn-primary" id="updateBlurb">Update</button>
                </div>          
            </div>
        </div>
        <br>
        <br>


        <h8 class="display-6" style ="text-decoration: underline; padding-top: 2%;">Photos</h8>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">PhotoID</th>
                    <th scope="col">Link</th>
                    <th scope="col">Actions</th>           
                </tr>
            </thead>
            <tbody id="main-pic-rows">
            </tbody>
        </table>
        <br>
        <div class="row b-3" id="addImageField">
            <div class = "col">
                <input class="form-control" id="newImgURL" placeholder="Enter URL">
            </div>
            <div class = "col">
                <button class="btn btn-primary" id="addImageButton">Add</button>
            </div>
        </div>

    </div>


    <!-- Modal -->
    <div class="modal fade" id="imageModal" tabindex="-1" aria-labelledby="imageModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="modalTitle">Image Details</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="imageModalBody">
              <data hidden id="hidden-imageid"></data>
              <img id="petModalIMG">
              <h6 class="display-6" style ="text-decoration: underline; padding-top: 2%;"></h6>
              <input class="form-control" id="updatedImageURL">
              <br>
              <div class="col">
                <button class="btn btn-primary" id="updateImageButton">update</button>
              </div>
              <br>
            </div>
          </div>
        </div>
    </div>

    <%- include('../../partials/footer'); %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" 
            integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" 
            crossorigin="anonymous">
    </script>
    <script src = '../../scripts/shelterAdmin/petProfile.js'></script>
  </body>
</html>
