<!DOCTYPE html>
<html>
  <head>
    <%- include('../../partials/head'); %>
    <title>Adoptr</title>
  </head>
  <body>

    <%- include('../../partials/header_shelterAdmin'); %>
    <div class="container overflow-hidden">
        <div class="row">
            <div  id="profileFields" class="col" style="padding-right: 10%;">
                <h6 class="display-6" style ="text-decoration: underline;">Pet Profile</h6>
                <data hidden id="shelterID"></data>
                <div id="profileUpdateField"></div>
            </div>
        </div>
        <br><br.<br>

        <h8 class="display-6" style ="text-decoration: underline; padding-top: 2%;">properties</h8>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col-2">Atribute</th>
                    <th scope="col">value</th>
                    <th scope="col">Actions</th>           
                </tr>
            </thead>
            <tbody id="main-rows">
                <tr>
                    <th scope="col">name</th>
                    <th scope="col">
                        <input type="password" class="form-control" id="newName">
                    </th>
                    <th scope="col">
                        <button class="btn btn-primary" id="updateName">Update</button>
                    </th>   
                </tr>
                <tr>
                    <th scope="col">age</th>
                    <th scope="col">
                        <select class="form-select " id="atribute-form-age"> 
                            <option selected> option </option>
                          </select>
                    </th>   
                    <th scope="col">
                        <button class="btn btn-primary" id="updateAge">Update</button>
                    </th> 
                </tr>
                <tr>
                    <th scope="col">sex</th>
                    <th scope="col">
                        <select class="form-select " id="atribute-form-sex"> 
                            <option selected> option </option>
                          </select>
                    </th>   
                    <th scope="col">
                        <button class="btn btn-primary" id="updateSex">Update</button>
                    </th> 
                </tr>
                <tr>
                    <th scope="col">type</th>
                    <th scope="col">
                        <select class="form-select " id="atribute-form-type"> 
                            <option selected> option </option>
                          </select>
                    </th>   
                    <th scope="col">
                        <button class="btn btn-primary" id="updateType">Update</button>
                    </th>   
                </tr>
                <tr>
                    <th scope="col">availability</th>
                    <th scope="col">
                        <select class="form-select " id="atribute-form-availability"> 
                            <option selected> option </option>
                          </select>
                    </th>   
                    <th scope="col">
                        <button class="btn btn-primary" id="updateAv">Update</button>
                    </th> 
                </tr>
                <tr>
                    <th scope="col">size</th>
                    <th scope="col">
                        <select class="form-select " id="atribute-form-size"> 
                            <option selected> option </option>
                          </select>
                    </th>   
                    <th scope="col">
                        <button class="btn btn-primary" id="updateSize">Update</button>
                    </th>   
                </tr>
                <tr>
                    <th scope="col">spayed/neutered</th>
                    <th scope="col">
                        <select class="form-select " id="atribute-form-spayedOrNeutered"> 
                            <option selected> option </option>
                          </select>
                    </th>   
                    <th scope="col">
                        <button class="btn btn-primary" id="updateSN">Update</button>
                    </th>   
                </tr>
                <tr>
                    <th scope="col">Shots Current</th>
                    <th scope="col">
                        <select class="form-select " id="atribute-form-shots"> 
                            <option selected> option </option>
                          </select>
                    </th>   
                    <th scope="col">
                        <button class="btn btn-primary" id="updateShots">Update</button>
                    </th>   
                </tr>
            </tbody>
        </table>
    
        </br>
        <h8 class="display-6" style ="text-decoration: underline; padding-top: 2%;">Blurb</h8>
        <div class="mb-3">
            <textarea class="form-control" id="petBlurb" rows="4">
                
            </textarea>
            </br>
            <button class="btn btn-primary" id="updateBlurb">Update</button>
        </div>



        <h8 class="display-6" style ="text-decoration: underline; padding-top: 2%;">Photos</h8>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">PhotoID</th>
                    <th scope="col">Link</th>
                    <th scope="col">Actions</th>           
                </tr>
            </thead>
            <tbody id="main-rows">
                <tr>
                    <th scope="col">0</th>
                    <th scope="col">example Link</th>
                    <th scope="col">
                        <button class="btn btn-danger mx-auto" id="deletePhoto">Delete</button>
                    </th>           
                </tr>
            </tbody>
        </table>
    



    </div>





    <%- include('../../partials/footer'); %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" 
            integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" 
            crossorigin="anonymous">
    </script>
    <!--<script src="../../scripts/user/customer_profile.js"></script>-->

  </body>
</html>
