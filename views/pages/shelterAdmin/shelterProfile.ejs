  </head>
  <body>

    <%- include('../../partials/header_shelterAdmin'); %>
    <div class="container overflow-hidden">
        <div class="row">
            <div  id="profileFields" class="col" style="padding-right: 10%;">
                <h6 class="display-6" style ="text-decoration: underline;">Shelter Information</h6>
                <data hidden id="hidden-shelterID"></data>
                <div id="profileUpdateField"></div>
            </div>
        </div>
        <br><br.<br>
        <div class="row">
            <div class="col">
                <div class = row>
                    <div id="nameUpdateField" class="col" style="padding-left: 10%;">
                        <div class="mb-3">
                            <h3 class="display-6" style ="text-decoration: underline;">Shelter Name</h6>
                        </div>
                        <div class ="row">
                          <div class="col mb-3">
                            <textarea type="name" class="form-control" id="newName" value="name"></textarea>
                          </div>
                          <div class="col-3 mb-3">
                            <input type="name" class="form-control" id="newCode" value="Code">
                          </div>
                        </div>

                        <button class="btn btn-primary" id="updateName">Update</button>
                        <br><br>
                    </div>
                </div>

                <div class = row>
                    <div id="nameUpdateField" class="col" style="padding-left: 10%;">
                        <h6 class="display-6" style ="text-decoration: underline;">location</h6>
                        <div class="mb-3">
                            <div class ='row'>
                                <div class="col">
                                    <input type="name" class="form-control" id="newZip" value = 'zip'>
                                </div>
                                <div class="col">
                                    <input type="name" class="form-control" id="newCity" value = 'city'>
                                </div>
                                <div class="col">
                                    <input type="name" class="form-control" id="newState" value = 'state'>
                                </div>
                            </div>
                        </div>
                        <div class="mb-3"></div>
                        <button class="btn btn-primary" id="updateLocation">Update</button>
                        <br><br>
                    </div>
                </div>

                <div class = "row">
                    <div id="nameUpdateField" class="col" style="padding-left: 10%;">
                        <h6 class="display-6" style ="text-decoration: underline;">contact info</h6>
                        <div class="mb-3">
                            <input type="name" class="form-control" id="currentEmail" value = 'email'>
                        </div>
                        <div class="mb-3"></div>
                        <div class="mb-3">
                            <input type="name" class="form-control" id="currentPhone" value = 'Phone number'>
                        </div>
                        <div class="mb-3"></div>
                        <button class="btn btn-primary" id="updateContact">Update</button>
                        <br><br>
                    </div>
                </div>


            </div>
            <div class="col">
                <div id="passwordUpdateField" class="col" style="padding-left: 10%;">
                    <h6 class="display-6" style ="text-decoration: underline;">Password</h6>
                        <div class="mb-3">
                            <label for="currentPassword" class="form-label">Current Password</label>
                            <input type="password" class="form-control" id="currentPassword">
                        </div>
                        <div class="mb-3">
                            <label for="newPassword" class="form-label">New Password</label>
                            <input type="password" class="form-control" id="newPassword">
                        </div>
                        <div class="mb-3">
                            <label for="confirmPassword" class="form-label">Confirm Password</label>
                            <input type="password" class="form-control" id="confirmPassword">
                        </div>
                        <button class="btn btn-primary" id="updatePassword">Update</button>
                        <br><br>
                </div>  
            </div>
        </div>




