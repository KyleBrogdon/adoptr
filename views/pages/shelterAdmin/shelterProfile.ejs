        <h6 class="display-6" style ="text-decoration: underline; padding-top: 2%;">Pet List</h6>
        <table class="table table-striped">
            <thead>
                <tr>
                  <th scope="col">Name</th>
                  <th scope="col">type</th>
                  <th scope="col">age</th>
                  <th scope="col">sex</th>
                  <th scope="col">Actions</th>     
                </tr>
            </thead>
            <tbody id="main-rows">
            </tbody>
        </table>


        <p>
          <button class="btn btn-success" type="button" data-bs-toggle="collapse" data-bs-target="#collapseNewPet" aria-expanded="false" aria-controls="collapseExample">
            INSERT new Pet
          </button>
        </p>
        <div class="collapse" id="collapseNewPet">
          <div class="card card-body" id="insert-card">
            <div class="input-group input-group-sm mb-3">
              <span class="input-group-text" id="inputGroup-sizing-sm">Name</span>
              <input type="text" id="new-pet-name" class="form-control" aria-label="petName" aria-describedby="inputGroup-sizing-sm">
            </div>
            <div class="input-group input-group-sm mb-3" id="new-pet-type">
              <span class="input-group-text" id="inputGroup-sizing-sm">type</span>
              <select class="form-select " id="atribute-form-type"> 
                <option selected> Undefined </option>
              </select>
            </div>
            <div class="input-group input-group-sm mb-3" id="new-pet-age">
              <span class="input-group-text" id="inputGroup-sizing-sm">age</span>
              <select class="form-select " id="atribute-form"> 
                <option selected> Undefined </option>
                <option value="Baby">Baby</option>
                <option value="Young">Young</option>
                <option value="Adult">Adult</option>
                <option value="Senior">Senior</option>
              </select>
            </div>
            <div class="input-group input-group-sm mb-3" id="new-pet-sex">
              <span class="input-group-text" id="inputGroup-sizing-sm">sex</span>
              <select class="form-select " id="atribute-form"> 
                <option selected> Undefined </option>
                <option value="Male">Male</option>
                <option value="Female">Female</option>
              </select>
            </div>

            <div class="my-3 mx-4 border-top"></div>
            <div class="container-sm">
              <button type="button" class="btn btn-primary" id="addPetButton">INSERT Pet</button>
            </div>
          </div>
        </div>

    </div>





    <div class="progress" id="loadingbar">
      <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%"></div>
    </div>



    <!-- Modal -->
    <div class="modal fade" id="petModal" tabindex="-1" aria-labelledby="petModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="modalTitle">Pet Details</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body" id="petModalBody">
            <img id="petIMG">
            <h6 class="display-6" style ="text-decoration: underline; padding-top: 2%;"></h6>
            <table class="table table-striped">
              <tbody id="modal-table">
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

    
