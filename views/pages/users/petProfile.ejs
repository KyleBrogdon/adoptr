<!DOCTYPE html>
<html>
  <head>
    <%- include('../../partials/head'); %>
    <title>Adoptr</title>
  </head>
  <body id = 'petProfile'>

    <%- include('../../partials/header_user'); %>
    <div class="container overflow-hidden">
        <div class="row">
            <div  id="profileFields" class="col" style="padding-right: 10%;">
                <h6 class="display-6" style ="text-decoration: underline;">Pet Profile</h6>
                <data hidden id="hidden-petid"></data>
                <div id="profileUpdateField"></div>
            </div>
        </div>
        <br>

        <div class="petRow" id ="petRow">

          </div>

    
        <h8 class="display-6" style ="text-decoration: underline; padding-top: 2%;">Blurb</h8>
        <div class="mb-3" id = "mb-3">
            <!--Insert Pet Blurb as P Here-->
            <br>
        </div>


        <h8 class="display-6" style ="text-decoration: underline; padding-top: 2%;">Properties</h8>
        <table class="table table-striped" id = 'petProfile--properties'>
            <thead>
                <tr>
                    <th scope="col-2">Attribute</th>
                    <th scope="col">Value</th>           
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col" id ="petname"></th>     
                </tr>
                <tr>
                    <th scope="col">Age</th>
                    <th scope="col" id = "age"></th>   
                </tr>
                <tr>
                    <th scope="col">Sex</th>
                    <th scope="col" id = "sex"></th>   
                </tr>
                <tr>
                    <th scope="col">Type</th>
                    <th scope="col" id = "typeid"></th>      
                </tr>
                <tr>
                    <th scope="col">Availability</th>
                    <th scope="col" id ="avid"></th>     
        
                </tr>
                <tr>
                    <th scope="col">Size</th>
                    <th scope="col" id = "sizeid"></th>    
                </tr>
                <tr>
                    <th scope="col">Spayed/Neutered</th>
                    <th scope="col" id = "snstatus"></th>   
                </tr>
                <tr>
                    <th scope="col">Shots Current</th>
                    <th scope="col" id = "ststatus"></th>   
                </tr>
            </tbody>

        </table>
    
        </br>




    </div>





    <%- include('../../partials/footer'); %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" 
            integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" 
            crossorigin="anonymous">
    </script>
