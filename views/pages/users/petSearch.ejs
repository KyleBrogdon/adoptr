<!DOCTYPE html>
<html>
  <head>
    <%- include('../../partials/head'); %>
    <title>Adoptr</title>
  </head>
  <body>

    <%- include('../../partials/header_user'); %>
    <div class="container overflow-hidden">
      <div class="row">
        <div  id="profileFields" class="col" style="padding-right: 10%;">
            <h6 class="display-6" style ="text-decoration: underline;">Pet Search</h6>
            <data hidden id="shelterID"></data>
            <div id="profileUpdateField"></div>
        </div>
    </div>
    <br><br.<br>

    <div class="card card-body">
        <div class="input-group input-group-sm mb-3">
          <span class="input-group-text" id="inputGroup-sizing-sm">Search</span>
          <input type="text" id="searchBar" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm">
          <div class="col-2">
            <select class="form-select " id="atribute-form"> 
              <option selected> Property </option>
              <option value="petID">pet ID</option>
              <option value="petName">pet Name</option>
              <option value="petType">pet type</option>
              <option value="petAge">pet age</option>
              <option value="petSex">pet sex</option>
            </select>
          </div>
        </div>
        <div class="my-3 mx-4 border-top"></div>
        <div class="container-sm">
          <button type="button" class="btn btn-success" id="searchButton">SELECT Pet(s)</button>
        </div>
      </div>
  


        <h6 class="display-6" style ="text-decoration: underline; padding-top: 2%;">Pet List</h6>
        <table class="table table-striped">
            <thead>
                <tr>
                <th scope="col">Pet ID</th>
                <th scope="col">Name</th>
                <th scope="col">type</th>
                <th scope="col">age</th>
                <th scope="col">sex</th>
                <th scope="col">Actions</th>           
                </tr>
            </thead>
            <tbody id="main-rows">
              <tr>
                <th scope="col">-1</th>
                <th scope="col">bob</th>
                <th scope="col">Dog</th>
                <th scope="col">puppy</th>
                <th scope="col">Male</th>
                <th scope="col">
                  <button class="btn btn-primary" id="updateName">Profile</button>
                </th>       
              </tr>
            </tbody>
        </table>

    </div>




    <div class="progress" id="loadingbar">
      <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%"></div>
    </div>



    <!-- Modal -->
    <div class="modal fade" id="orderModal" tabindex="-1" aria-labelledby="orderModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="modalTitle">Pet Details</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <h6 class="display-6" style ="text-decoration: underline; padding-top: 2%;"></h6>
            <table class="table table-striped">
              <thead>
                <tr>
                  <th scope="col">Name</th>
                  <th scope="col">location</th>
                </tr>
              </thead>
              <tbody id="modal-table">

              </tbody>

            </table>
          </div>
        </div>
      </div>
    </div>

    
    <%- include('../../partials/footer'); %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" 
            integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" 
            crossorigin="anonymous">
    </script>
    <!--<script src="../../scripts/user/customer_profile.js"></script>-->

  </body>
</html>





