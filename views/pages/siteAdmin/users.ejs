<!DOCTYPE html>
<html>
  <head>
    <%- include('../../partials/head'); %>
    <title>Adoptr</title>
  </head>
  <body>

    <%- include('../../partials/header_siteAdmin'); %>

    <div class="container">
      <h6 class="display-6" style ="text-decoration: underline; padding-top: 2%;">User Info</h6>
      <div class="card card-body">
        <div class="input-group input-group-sm mb-3">
          <span class="input-group-text" id="inputGroup-sizing-sm">Search</span>
          <input type="text" id="searchBar" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm">
          <div class="col-2">
            <select class="form-select " id="atribute-form"> 
              <option selected> Attribute </option>
              <option value="userid">userID</option>
              <option value="firstname">First Name</option>
              <option value="lastname">Last Name</option> 
              <option value="email">Email</option>
              <option value="adminstatus">Admin Status</option>
            </select>
          </div>

        </div>
        <div class="my-3 mx-4 border-top"></div>
        <div class="container-sm">
          <button type="button" class="btn btn-success" id="searchButton">Search User(s)</button>
        </div>
      </div>
      <div class="mt-3"></div>
      <p>
        <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#collapseNewUser" aria-expanded="false" aria-controls="collapseExample">
          INSERT new User
        </button>
      </p>
      <div class="collapse" id="collapseNewUser">
        <div class="card card-body" id="insert-card">
          <div class="input-group input-group-sm mb-3">
            <span class="input-group-text" id="inputGroup-sizing-sm">firstName</span>
            <input type="text" id="new-first-name" class="form-control" aria-label="firstName" aria-describedby="inputGroup-sizing-sm">
          </div>
          <div class="input-group input-group-sm mb-3">
            <span class="input-group-text" id="inputGroup-sizing-sm">lastName</span>
            <input type="text" id="new-last-name" class="form-control" aria-label="lastName" aria-describedby="inputGroup-sizing-sm">
          </div>
          <div class="input-group input-group-sm mb-3">
            <span class="input-group-text" id="inputGroup-sizing-sm">email</span>
            <input type="text" id="new-email" class="form-control" aria-label="email" aria-describedby="inputGroup-sizing-sm" placeholder="Enter Unique Email">
          </div>
          <div class="input-group input-group-sm mb-3">
            <span class="input-group-text" id="inputGroup-sizing-sm">password</span>
            <input type="text" id="new-password" class="form-control" aria-label="password" aria-describedby="inputGroup-sizing-sm" >
          </div>
          <!--<div class="input-group input-group-sm mb-3">
            <span class="input-group-text" id="inputGroup-sizing-sm">admin Status</span>
            <input type="text" id="new-admin-status" class="form-control" aria-label="adminStatus" aria-describedby="inputGroup-sizing-sm" >
          </div>-->

          <div class="form-check">
            <input class="form-check-input" type="checkbox" value=" " id="new-admin-status">
            <label class="form-check-label" for="flexCheckChecked">
              Admin Status
            </label>
          </div>
          <div class="my-3 mx-4 border-top"></div>
          <div class="container-sm">
            <button type="button" class="btn btn-success" id="addUserButton">INSERT User entry</button>
          </div>
        </div>
      </div>
      
      <div class="mt-3"></div>
      <p>
        <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#update-modal" aria-expanded="false" aria-controls="collapseExample">
          UPDATE User entry
        </button>
      </p>
      <div class="collapse" id="update-modal">
        <div class="card card-body" id="insert-card">

          <div class="input-group input-group-sm mb-3">
            <span class="input-group-text" id="inputGroup-sizing-sm">UserID (PK)</span>
            <select class="form-select " id="update-user-pk-menu"> 
              <option selected> number </option>

            </select>
          </div>
          <div class="input-group input-group-sm mb-3">
            <span class="input-group-text" id="inputGroup-sizing-sm">firstName</span>
            <input type="text" id="update-first-name" class="form-control" aria-label="firstName" aria-describedby="inputGroup-sizing-sm">
          </div>
          <div class="input-group input-group-sm mb-3">
            <span class="input-group-text" id="inputGroup-sizing-sm">lastName</span>
            <input type="text" id="update-last-name" class="form-control" aria-label="lastName" aria-describedby="inputGroup-sizing-sm">
          </div>
          <div class="input-group input-group-sm mb-3">
            <span class="input-group-text" id="inputGroup-sizing-sm">email</span>
            <input type="text" id="update-email" class="form-control" aria-label="email" aria-describedby="inputGroup-sizing-sm" placeholder="Enter Unique Email">
          </div>
          <div class="input-group input-group-sm mb-3">
            <span class="input-group-text" id="inputGroup-sizing-sm">password</span>
            <input type="text" id="update-password" class="form-control" aria-label="password" aria-describedby="inputGroup-sizing-sm" placeholder="Optional">
          </div>
          <!-- <div class="input-group input-group-sm mb-3">
            <span class="input-group-text" id="inputGroup-sizing-sm">admin Status</span>
            <input type="text" id="update-admin-status" class="form-control" aria-label="adminStatus" aria-describedby="inputGroup-sizing-sm" placeholder="Optional">
          </div> -->
          <div class="form-check">
            <input class="form-check-input" type="checkbox" value=" " id="update-admin-status">
            <label class="form-check-label" for="flexCheckChecked">
              Admin Status (Optional)
            </label>
          </div>

          <div class="my-3 mx-4 border-top"></div>
          <div class="container-sm">
            <button type="button" class="btn btn-success" id="updateUserButton">UPDATE User entry</button>
          </div>
        </div>
      </div>

      
      <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">userID</th>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Email</th>
            <th scope="col">Admin Status</th>
            <th scope="col">Actions</th>
          </tr>
        </thead>
        <tbody id="main-rows">
          
        </tbody>
      </table>


  
      <div class="mt-3"></div>
  
    </div>  

    <div class="progress" id="loadingbar">
      <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%"></div>
    </div>



    <!-- Modal for updating a user -->
    <div class="modal fade" id="updateUserModal" tabindex="-1" aria-labelledby="userModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="updateUserModalTitle">User Details</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <div class="card card-body" id="insert-card">
              <div class="input-group input-group-sm mb-3">
                <span class="input-group-text" id="inputGroup-sizing-sm">firstName</span>
                <input type="text" id="edit-first-name" class="form-control" aria-label="firstName" aria-describedby="inputGroup-sizing-sm">
              </div>
              <div class="input-group input-group-sm mb-3">
                <span class="input-group-text" id="inputGroup-sizing-sm">lastName</span>
                <input type="text" id="edit-last-name" class="form-control" aria-label="lastName" aria-describedby="inputGroup-sizing-sm">
              </div>
              <div class="input-group input-group-sm mb-3">
                <span class="input-group-text" id="inputGroup-sizing-sm">email</span>
                <input type="text" id="edit-email" class="form-control" aria-label="email" aria-describedby="inputGroup-sizing-sm">
              </div>
              <div class="input-group input-group-sm mb-3">
                <span class="input-group-text" id="inputGroup-sizing-sm">password</span>
                <input type="text" id="edit-password" class="form-control" aria-label="password" aria-describedby="inputGroup-sizing-sm">
              </div>
              <div class="input-group input-group-sm mb-3">
                <span class="input-group-text" id="inputGroup-sizing-sm">Admin Status</span>
                <input type="text" id="edit-admin-status" class="form-control" aria-label="adminStatus" aria-describedby="inputGroup-sizing-sm">
              </div>
              <div class="my-3 mx-4 border-top"></div>
              <div class="container-sm">
                <button type="button" class="btn btn-success">UPDATE User entry</button>
              </div>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>

    <%- include('../../partials/footer'); %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" 
            integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" 
            crossorigin="anonymous">
    </script>
   <script src="../../scripts/siteAdmin/usersSA.js"></script>

  </body>
</html>
