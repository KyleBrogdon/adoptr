<!DOCTYPE html>
<html>
  <head>
    <%- include('../../partials/head'); %>
    <title>Adoptr</title>
  </head>
  <body>

    <%- include('../../partials/header_siteAdmin'); %>

    <div class="container">
      <h6 class="display-6" style ="text-decoration: underline; padding-top: 2%;">Shelter Admin Info</h6>
      <div class="card card-body">
        <div class="input-group input-group-sm mb-3">
          <span class="input-group-text" id="inputGroup-sizing-sm">Search</span>
          <input type="text" id="searchBar" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm">
          <div class="col-2">
            <select class="form-select " id="atribute-form"> 
              <option selected> Attribute </option>
              <option value="customerID">AdminID</option>
              <option value="firstName">First Name</option>
              <option value="lastName">Last Name</option> 
              <option value="email">Email</option>
            </select>
          </div>

        </div>
        <div class="my-3 mx-4 border-top"></div>
        <div class="container-sm">
          <button type="button" class="btn btn-success" id="searchButton">Search admin(s)</button>
        </div>
      </div>
      <div class="mt-3"></div>
      <p>
        <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#collapseNewAdmin" aria-expanded="false" aria-controls="collapseExample">
          INSERT new admin
        </button>
      </p>
      <div class="collapse" id="collapseNewAdmin">
        <div class="card card-body" id="insert-card">
          <div class="input-group input-group-sm mb-3">
            <span class="input-group-text" id="inputGroup-sizing-sm">firstName</span>
            <input type="text" id="new-first-name" class="form-control" aria-label="firstName" aria-describedby="inputGroup-sizing-sm">
          </div>
          <div class="input-group input-group-sm mb-3">
            <span class="input-group-text" id="inputGroup-sizing-sm">lastName</span>
            <input type="text" id="new-last-name" class="form-control" aria-label="lastName" aria-describedby="inputGroup-sizing-sm">
          </div>
          <div class="input-group input-group-sm mb-3">
            <span class="input-group-text" id="inputGroup-sizing-sm">email</span>
            <input type="text" id="new-email" class="form-control" aria-label="email" aria-describedby="inputGroup-sizing-sm" placeholder="Enter Unique Email">
          </div>
          <div class="input-group input-group-sm mb-3">
            <span class="input-group-text" id="inputGroup-sizing-sm">password</span>
            <input type="text" id="new-password" class="form-control" aria-label="password" aria-describedby="inputGroup-sizing-sm" >
          </div>
          <div class="my-3 mx-4 border-top"></div>
          <div class="container-sm">
            <button type="button" class="btn btn-success" id="addAdminButton">INSERT admin entry</button>
          </div>
        </div>
      </div>
      
      <div class="mt-3"></div>
      <p>
        <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#update-modal" aria-expanded="false" aria-controls="collapseExample">
          UPDATE admin entry
        </button>
      </p>
      <div class="collapse" id="update-modal">
        <div class="card card-body" id="insert-card">

          <div class="input-group input-group-sm mb-3">
            <span class="input-group-text" id="inputGroup-sizing-sm">adminID (PK)</span>
            <select class="form-select " id="update-Admin-pk-menu"> 
              <option selected> number </option>

            </select>
          </div>
          <div class="input-group input-group-sm mb-3">
            <span class="input-group-text" id="inputGroup-sizing-sm">firstName</span>
            <input type="text" id="update-first-name" class="form-control" aria-label="firstName" aria-describedby="inputGroup-sizing-sm">
          </div>
          <div class="input-group input-group-sm mb-3">
            <span class="input-group-text" id="inputGroup-sizing-sm">lastName</span>
            <input type="text" id="update-last-name" class="form-control" aria-label="lastName" aria-describedby="inputGroup-sizing-sm">
          </div>
          <div class="input-group input-group-sm mb-3">
            <span class="input-group-text" id="inputGroup-sizing-sm">email</span>
            <input type="text" id="update-email" class="form-control" aria-label="email" aria-describedby="inputGroup-sizing-sm" placeholder="Enter Unique Email">
          </div>
          <div class="input-group input-group-sm mb-3">
            <span class="input-group-text" id="inputGroup-sizing-sm">password</span>
            <input type="text" id="update-password" class="form-control" aria-label="password" aria-describedby="inputGroup-sizing-sm" placeholder="Optional">
          </div>
          <div class="my-3 mx-4 border-top"></div>
          <div class="container-sm">
            <button type="button" class="btn btn-success" id="updateAdminButton">UPDATE admin entry</button>
          </div>
        </div>
      </div>



      <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">adminID</th>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Email</th>
            <th scope="col">Shelter Details</th>
            <th scope="col">Actions</th>
          </tr>
        </thead>
        <tbody id="main-rows">
          
        </tbody>
      </table>


  
      <div class="mt-3"></div>
  
    </div>  

    <div class="progress" id="loadingbar">
      <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%"></div>
    </div>


    <!-- Modal for viewing order info -->
    <div class="modal fade" id="customerModal" tabindex="-1" aria-labelledby="customerModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="modalTitle">Shelter Details</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <h6 class="display-6" style ="text-decoration: underline; padding-top: 2%;"></h6>
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th scope="col">Shelter #</th>
                    <th scope="col">Shelter Name</th>
                    <th scope="col">Location</th>
                  </tr>
                </thead>
                <tbody id="modal-table">
  
                </tbody>
  
              </table>
            </div>
          </div>
        </div>
      </div>

    <!-- Modal for updating a shelter admin -->
    <div class="modal fade" id="updateAdminModal" tabindex="-1" aria-labelledby="customerAdminLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="updateAdminModalTitle">admin Details</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <div class="card card-body" id="insert-card">
              <div class="input-group input-group-sm mb-3">
                <span class="input-group-text" id="inputGroup-sizing-sm">firstName</span>
                <input type="text" id="edit-first-name" class="form-control" aria-label="firstName" aria-describedby="inputGroup-sizing-sm">
              </div>
              <div class="input-group input-group-sm mb-3">
                <span class="input-group-text" id="inputGroup-sizing-sm">lastName</span>
                <input type="text" id="edit-last-name" class="form-control" aria-label="lastName" aria-describedby="inputGroup-sizing-sm">
              </div>
              <div class="input-group input-group-sm mb-3">
                <span class="input-group-text" id="inputGroup-sizing-sm">email</span>
                <input type="text" id="edit-email" class="form-control" aria-label="email" aria-describedby="inputGroup-sizing-sm">
              </div>
              <div class="input-group input-group-sm mb-3">
                <span class="input-group-text" id="inputGroup-sizing-sm">password</span>
                <input type="text" id="edit-password" class="form-control" aria-label="password" aria-describedby="inputGroup-sizing-sm">
              </div>
              <div class="my-3 mx-4 border-top"></div>
              <div class="container-sm">
                <button type="button" class="btn btn-success">UPDATE admin entry</button>
              </div>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>

    <%- include('../../partials/footer'); %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" 
            integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" 
            crossorigin="anonymous">
    </script>
   <!-- <script src="../../scripts/admin/admin_customers.js"></script> --> 
  </body>
</html>
